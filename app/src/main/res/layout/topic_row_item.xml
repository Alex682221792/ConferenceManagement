<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topic_item_size"
    android:orientation="vertical"
    android:padding="@dimen/general_padding">

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_size"
        android:layout_marginBottom="5sp"
        android:background="@drawable/nav_bar_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVw_time"
            style="@style/itemTime"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVw_title"
                style="@style/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtVw_duration"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgVw_delete"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/icon_button_padding"
            android:tint="@color/negativeAction"
            app:srcCompat="@drawable/ic_delete" />

    </LinearLayout>

</LinearLayout>